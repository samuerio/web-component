.timeline{
  position: relative;
  z-index: 1010;
  margin-left: 55px;

  &::after{
    content: " ";
    position: absolute;
    top: 20px;
    left: 0;
    margin-left: -2px;
    width: 4px;
    height: 100%;
    background: #f5f5f5;
    z-index: -1;
  }
}

.timeline-clock{
  position: relative;
  height:36px;
  padding-left: 20px;
  margin: 12px 0;
  line-height: 36px;/*和高度一样,可以保证居中对齐*/

  &::before {
    content: " ";
    position: absolute;
    left: 0;
    top: 50%;
    margin-left: -4px;
    margin-top: -4px;
    width: 8px;
    height: 8px;
    background: #bbb;
    border-radius: 50%;
  }

  span{
    color: #82abd4;
    font-size:1.2em;
  }
}

.timeline-record{
  position: relative;
  height: 2em;
  padding-left: 15px;
  line-height: 2em;

  &::before{
    content: "";
    position: absolute;
    left: 0;
    top: 13px;
    width: 6px;
    height: 6px;
    margin-left: -4px;
    background: #bbb;
    border-radius: 50%;
    border: 1px solid #fff;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
    transition-property: background;
  }

  a {
      display: block;
      border-bottom: none;
      background-color: transparent;
      text-decoration: none;
      color: #2e2e2e;
      border-bottom: 1px dashed #ccc;
    }

  p {
      margin: 0;
      width: 140px;
      color: #666;
      text-overflow: ellipsis;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      display: -webkit-box;
      overflow: hidden;
    }
}


